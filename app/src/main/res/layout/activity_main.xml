<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11092D"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BALANCE\n$13,045"
            android:id="@+id/txt_balance"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How much would you like to send?"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/txt_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/number_layout4"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:paddingTop="40dp"
        android:background="null"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>
 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="10dp"
     android:id="@+id/number_layout1"
     app:layout_constraintTop_toBottomOf="@+id/amount">
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="1"
         android:id="@+id/one"
         android:padding="10dp"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:textSize="18sp"
         android:textAlignment="center"
         android:layout_margin="5dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@+id/two"

         />
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="2"
         android:id="@+id/two"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:padding="10dp"
         android:textAlignment="center"
         android:textSize="18sp"
         android:layout_margin="5dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toEndOf="@+id/one"
         app:layout_constraintEnd_toStartOf="@+id/three"

         />
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="3"
         android:id="@+id/three"
         android:padding="10dp"
         android:textSize="18sp"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:textAlignment="center"
         android:layout_margin="5dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toEndOf="@+id/two"
         app:layout_constraintEnd_toEndOf="parent"

         />
 </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="10dp"
     android:id="@+id/number_layout2"
     app:layout_constraintTop_toBottomOf="@+id/number_layout1">
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="4"
         android:id="@+id/four"
         android:padding="10dp"
         android:textSize="18sp"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:textAlignment="center"
         android:layout_margin="5dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@+id/five"

         />
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="5"
         android:id="@+id/five"
         android:padding="10dp"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:textAlignment="center"
         android:textSize="18sp"
         android:layout_margin="5dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toEndOf="@+id/four"
         app:layout_constraintEnd_toStartOf="@+id/six"

         />
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="6"
         android:id="@+id/six"
         android:padding="10dp"
         android:textSize="18sp"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:textAlignment="center"
         android:layout_margin="5dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toEndOf="@+id/five"
         app:layout_constraintEnd_toEndOf="parent"

         />
 </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/number_layout3"
        app:layout_constraintTop_toBottomOf="@+id/number_layout2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/seven"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/eight"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/eight"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintEnd_toStartOf="@+id/nine"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/nine"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/eight"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dot"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintStart_toStartOf="@+id/seven"
            app:layout_constraintEnd_toEndOf="@+id/seven"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/zero"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintStart_toStartOf="@+id/eight"
            app:layout_constraintEnd_toEndOf="@+id/eight"

            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:id="@+id/delete"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_backspace_24"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/nine"
            app:layout_constraintEnd_toEndOf="@+id/nine"
            app:tint="@color/white"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/background"
        android:layout_margin="15dp"
        android:id="@+id/number_layout4"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>